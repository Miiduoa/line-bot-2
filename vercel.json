{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "api/callback.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/callback", "dest": "/api/callback.py" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "env": {
    "PYTHONPATH": "."
  }
} 